{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    {{#paper-button icon-button=true action="back"}}{{paper-icon icon="navigate-before"}}{{/paper-button}}
    <span>Edit geofence</span>
    <span flex></span>
    {{#paper-button icon-button=true action="save"}}{{paper-icon icon="done"}}{{/paper-button}}
  </div>
{{/paper-toolbar}}

{{#if isWorking}}
  {{paper-progress-linear}}
{{/if}}

{{#loading-container promise=promise}}
  {{geofence-form model=model}}
{{/loading-container}}
