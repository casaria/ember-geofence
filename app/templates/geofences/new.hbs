{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    {{#paper-button icon-button=true action="back"}}{{paper-icon icon="navigate-before"}}{{/paper-button}}
    <span>Adding new geofence</span>
    <span flex></span>
    {{#paper-button icon-button=true action="save"}}{{paper-icon icon="done"}}{{/paper-button}}
  </div>
{{/paper-toolbar}}

{{#if isWorking}}
  {{paper-progress-linear}}
{{/if}}

{{#if isPending}}
  <div class="loading" layout="row" layout-align="center center">
    {{paper-progress-circular}}
  </div>
{{else}}
  {{geofence-form model=model}}
{{/if}}



