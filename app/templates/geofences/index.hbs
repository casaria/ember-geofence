{{#paper-toolbar}}
  <div class="md-toolbar-tools">
    <span>Geofence regions</span>
    <span flex></span>
    {{#paper-button icon-button=true action="add"}}{{paper-icon icon="add"}}{{/paper-button}}
    {{#paper-button icon-button=true}}{{paper-icon icon="more-vert"}}{{/paper-button}}
  </div>
{{/paper-toolbar}}

{{#paper-content class="md-whiteframe-z1"}}
  {{#paper-list}}
    {{#each model as |geofence|}}
      {{#paper-item class="md-3-line" action="edit" param=geofence}}
        <div class="md-list-item-text">
          <p>
            {{geofence.notification.text}}
          </p>
          {{#paper-button icon-button=true action="delete" param=geofence}}
            {{paper-icon icon="delete"}}
          {{/paper-button}}
        </div>
      {{/paper-item}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}
