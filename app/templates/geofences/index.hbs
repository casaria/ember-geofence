{{#paper-toolbar classNames="md-scroll-shrink"}}
  <div class="md-toolbar-tools">
    <span>Geofence regions</span>
    <span flex></span>
    
    {{#paper-menu as |menu|}}
      {{#paper-button target=menu action="toggleMenu" icon-button=true}}
        {{paper-icon class="md-menu-origin" icon="more-vert"}}
      {{/paper-button}}
    {{else}}
      {{#paper-menu-item action="testApplication"}}
        {{paper-icon icon="check" class="md-menu-align-target"}}
        <span>Test application</span>
      {{/paper-menu-item}}
      {{#paper-menu-item action="removeAll"}}
        {{paper-icon icon="delete" class="md-menu-align-target"}}
        <span>Remove all geofences</span>
      {{/paper-menu-item}}
    {{/paper-menu}}
  </div>
{{/paper-toolbar}}

{{#paper-content}}
  {{#if isWorking}}
    {{paper-progress-linear}}
  {{/if}}
  
  {{#if isPending}}
    <div class="loading" layout="row" layout-align="center center">
      {{paper-progress-circular}}
    </div>
  {{else}}
    {{#paper-list}}
      {{#each model as |geofence|}}
      {{#paper-item class="md-3-line" action="edit" param=geofence}}
      <div class="md-list-item-text">
        <p>
          {{geofence.notification.text}}
        </p>
        {{#paper-button icon-button=true action="delete" param=geofence}}
        {{paper-icon icon="delete"}}
        {{/paper-button}}
      </div>
      {{/paper-item}}
      {{/each}}

      {{#unless anyGeofences}}
        {{#paper-card}}
          {{#paper-card-content}}
            <p>
              There are no geofences added yet.
            </p>
          {{/paper-card-content}}
        {{/paper-card}}
      {{/unless}}
    {{/paper-list}}
  {{/if}}
{{/paper-content}}
{{#paper-button classNames="md-fab md-fab-bottom-right" icon-button=true action="add"}}{{paper-icon icon="add"}}{{/paper-button}}
